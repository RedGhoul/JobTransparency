@model IEnumerable<AJobBoard.Models.JobPosting>

<section class="site-section JobPostingList" style="background-color: #343a40;">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center" style="padding-bottom: 100px;padding-top: 50px;">
                @if (ViewBag.TotalJobs > 0)
                {
                    <h2 class="section-title mb-2" style="color:white;"> Found: @ViewBag.TotalJobs Jobs in @ViewBag.SecsToQuery Seconds</h2>

                }
                else
                {
                    <h2 class="section-title mb-2" style="color:white;"> Could not find any jobs :(</h2>

                }
            </div>
            <div class="col-md-12 text-center">
                @using (Html.BeginForm("Index", "JobPostings", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row mb-5">
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                            <h6 style="color:white">Key Words</h6>
                            <input style="height:47px;" type="text" name="FindModel.KeyWords"
                                   class="form-control form-control-lg" placeholder="Job title, keywords..."
                                   value="@(ViewBag.KeyWords ?? "")">
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                            <h6 style="color:white">Location</h6>
                            <select class="form-control" name="FindModel.Location" value="@(ViewBag.KeyWords ?? "")">
                                <option>Anywhere</option>
                                <option>Ontario</option>
                                <option>Toronto</option>
                                <option>Vancouver</option>
                            </select>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                            <h6 style="color:white">Post Age</h6>
                            <select class="form-control" name="FindModel.Date">
                                <option>Newest Posts</option>
                                <option>Last 20 Days</option>
                                <option>Last 30 Days</option>
                            </select>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                            <h6 style="color:white">Max Results</h6>
                            <select class="form-control" name="FindModel.MaxResults">
                                @for (int i = 1; i < 20; i++)
                                {
                                    var currentValue = i * 100;
                                    var currentMax = ViewBag.MaxResults ?? 0;

                                    if (currentValue == currentMax)
                                    {
                                        <option selected="selected">@(currentValue.ToString())</option>
                                    }
                                    else
                                    {
                                        <option>@(currentValue.ToString())</option>
                                    }
                                }
                            </select>
                        </div>
                        @if (ViewBag.Page == null)
                        {
                            <input type="hidden" name="FindModel.Page" value="@(ViewBag.Page)" />
                        }
                        else
                        {
                            <input type="hidden" name="FindModel.Page" value="0" />
                        }

                    </div>
                    <div class="row mb-5">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <button style="margin-top:25px;" type="submit" class="btn btn-primary btn-lg btn-block text-white btn-search"><span class="icon-search icon mr-2"></span>Search Job</button>
                        </div>
                        <div class="col-4"></div>

                    </div>
                }
            </div>
        </div>

        <div class="mb-5">
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                        <div class="col-md-2">
                            <button data-id="@item.Id" class="btn btn-warning AddToApplies">Add To Applies</button>
                        </div>
                        <div class="col-md-4" style="color: beige">
                            @if (item.Title.ToLower().Contains("devops") || item.Title.ToLower().Contains("dev ops"))
                            {
                                <span class="badge badge-primary px-2 py-1 mb-3">Dev Ops</span>
                            }
                            else
                            {
                                <span class="badge badge-primary px-2 py-1 mb-3">Software</span>
                            }
                            <h2><a asp-controller="JobPostings" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a> </h2>
                            <p style="color: beige" class="meta">Publisher: <strong style="color: beige">Indeed</strong> In: <strong style="color: beige">Design</strong></p>
                        </div>
                        <div class="col-md-3 text-left">
                            <h3 style="color: beige">@Html.DisplayNameFor(model => model.Location):</h3>
                            @if (string.IsNullOrEmpty(item.Location))
                            {
                                <h3 style="color: beige">Non - Found</h3>

                            }
                            else
                            {
                                <h3 style="color: beige">@Html.DisplayFor(modelItem => item.Location)</h3>

                            }
                        </div>
                        <div class="col-md-3 text-md-right" style="color: beige">
                            <h5>Company:</h5>
                            <strong>@Html.DisplayFor(modelItem => item.Company)</strong>

                        </div>
                    </div>


                }


                <div class="row pagination-wrap">


                    <div class="col-md-6 text-center text-md-left">
                        <div class="custom-pagination ml-auto">
                            <div class="row">
                                <div class="col-4">
                                    @if (ViewBag.Page > 0)
                                    {
                                        @using (Html.BeginForm("Index", "JobPostings", FormMethod.Post))
                                        {
                                            <input type="hidden" name="FindModel.KeyWords" value="@ViewBag.KeyWords" />
                                            <input type="hidden" name="FindModel.Location" value="@ViewBag.Location" />
                                            <input type="hidden" name="FindModel.MaxResults" value="@ViewBag.MaxResults" />
                                            <input type="hidden" name="FindModel.page" value="@(ViewBag.Page - 1)" />
                                            <button type="submit" class="btn btn-primary btn-lg next">&laquo; Prev</button>
                                        }
                                    }
                                </div>
                                <div class="col-4">
                                    @if (ViewBag.Page < ViewBag.MaxPage)
                                    {
                                        @using (Html.BeginForm("Index", "JobPostings", FormMethod.Post))
                                        {
                                            <input type="hidden" name="FindModel.KeyWords" value="@ViewBag.KeyWords" />
                                            <input type="hidden" name="FindModel.Location" value="@ViewBag.Location" />
                                            <input type="hidden" name="FindModel.MaxResults" value="@ViewBag.MaxResults" />
                                            <input type="hidden" name="FindModel.page" value="@(ViewBag.Page + 1)" />
                                            <button type="submit" class="btn btn-primary btn-lg next">Next &raquo;</button>
                                        }

                                    }
                                </div>
                                <div class="col-4">

                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                    <div class="col-md-2"></div>
                    <div class="col-md-8"><h4 style="text-align:center;">Sorry nothing was found matching that criteria</h4></div>
                    <div class="col-md-2"></div>

                </div>
            }



        </div>



    </div>
</section>



<section class="py-5 bg-image overlay-primary fixed overlay" style="background-image: url('/images/hero_1.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="text-white">Looking For A Job?</h2>
                <p class="mb-0 text-white lead">
                    Sign Up Now and save your self some time
                </p>
            </div>
            <div class="col-md-3 ml-auto">
                <a href="/Home/RegisterType" class="btn btn-warning btn-block btn-lg">Sign Up</a>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
            var antiForgeryToken = $("input[name='__RequestVerificationToken']").val();
            $('.AddToApplies').click(function () {
                var d = $(this).data('id');
                $.ajax({
                    method: "POST",
                    contentType: 'application/json',
                    headers: { "RequestVerificationToken": antiForgeryToken },
                    url: "/api/AppliesAPI",
                    data: JSON.stringify({ Id: parseInt(d) }),
                    success: function (data) {
                        alertify.success("Added to Applies");
                    },
                    error: function (data) {
                        alertify.error("Could Not Add this Job to your Applies");
                    }
                })
            });
    </script>

}
