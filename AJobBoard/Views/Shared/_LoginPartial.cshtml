@using Microsoft.AspNetCore.Identity
@using AJobBoard.Models.Entity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    if(User.IsInRole("Admin"))
    {
         <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Job Getting
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" asp-action="Index" asp-controller="JobGettingConfigs">JobGettingConfigs</a>
                <a class="dropdown-item" asp-action="Index" asp-controller="PositionCities">PositionCities</a>
                <a class="dropdown-item" asp-action="Index" asp-controller="PositionNames">PositionNames</a>
            </div>
        </div>
    }
   
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Profile</a>
    </li>
    <li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
