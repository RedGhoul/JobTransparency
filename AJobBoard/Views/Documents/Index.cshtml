@model IEnumerable<AJobBoard.Models.Document>

@{
    ViewData["Title"] = "Index";
}
<section class="site-section" style="background-color: currentColor;padding-top:200px;">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center" style="padding-bottom: 20px;">
                <h2 class="section-title mb-2" style="color: white;">Your Resumes</h2>
            </div>
            <div class="col-md-12 text-center">
                <p>
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                </p>
                <table class="table" style="color: white;">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Main Resume
                            </th>
                            <th>
                                Date Created
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.URL.Split("_")[1]
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsResume)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.DocumentId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.DocumentId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.DocumentId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</section>

