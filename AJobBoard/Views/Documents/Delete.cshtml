@model AJobBoard.Models.Entity.Document

@{
    ViewData["Title"] = "Delete";
}


<section class="site-section" style="background-color: currentColor;padding-top:200px;">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center" style="padding-bottom: 10px;">
                <h5 class="section-title mb-2" style="color:white;">Edit Document</h5>
            </div>
            <div class="col-md-12 text-center">
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4" style="color:white">
                        <h6>Are you sure you want to delete this?</h6>
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DocumentName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DocumentName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IsResume)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IsResume)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IsOtherDoc)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IsOtherDoc)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.DateCreated.ToShortDateString()
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="DocumentId" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>|
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>

                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    </div>



</section>
