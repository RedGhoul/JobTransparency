@model AJobBoard.Models.Document

@{
    ViewData["Title"] = "Create";
}

    <section class="site-section" style="background-color: currentColor;padding-top:200px;">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-md-7 text-center" style="padding-bottom: 10px;">
                    <h5 class="section-title mb-2" style="color:white;">Edit Document</h5>
                </div>
                <div class="col-md-12 text-center">
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4" >

                            <form asp-action="Create" >
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="URL" class="control-label" style="color:white;">Name</label>
                                    <input asp-for="URL" class="form-control" />
                                    <span asp-validation-for="URL" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="URL" class="control-label" style="color:white;">Document</label>
                                    <input asp-for="URL" class="form-control" />
                                    <span asp-validation-for="URL" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label" style="color:white;">
                                        <input class="form-check-input" asp-for="IsResume" /> @Html.DisplayNameFor(model => model.IsResume)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" style="color:white;"> Date Created</label>
                                    <input asp-for="DateCreated" class="form-control" />
                                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>

                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <div>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>



    </section>


